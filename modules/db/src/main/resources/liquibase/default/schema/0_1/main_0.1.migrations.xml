<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">


    <changeSet id="create model table" author="Rishat">
        <createTable tableName="Model">
            <column name="id" type="text">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="classes" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="typeBody" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="brand" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create customer table" author="Rishat">
        <createTable tableName="Customer">
            <column name="id" type="text">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstName" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="licenseNumber" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="lastName" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>


    <changeSet id="create car table" author="Rishat">
        <createTable tableName="Car">
            <column name="id" type="text">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="mileage" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="regNumber" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="modelId" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="priceHour" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="releaseDate" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="modelId"
                                 baseTableName="Car"
                                 constraintName="fk_Car_modelId_Model_id"
                                 referencedColumnNames="id"
                                 referencedTableName="Model"/>
    </changeSet>

    <changeSet id="create reservation table" author="Rishat">
        <createTable tableName="Reservation">
            <column name="id" type="text">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pickupDate" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="returnDate" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="pickUpLocation" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="carId" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="customersId" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="carId"
                                 baseTableName="Reservation"
                                 constraintName="fk_Reservation_carId_Car_id"
                                 referencedColumnNames="id"
                                 referencedTableName="Car"/>
        <addForeignKeyConstraint baseColumnNames="customersId"
                                 baseTableName="Reservation"
                                 constraintName="fk_Car_modelId_Customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="Customer"/>
    </changeSet>


</databaseChangeLog>